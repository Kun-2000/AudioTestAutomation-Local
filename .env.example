# === OpenAI API 設定 ===
OPENAI_API_KEY=your-openai-api-key

# === Yating TTS API 設定 ===
YATING_API_KEY=your-yating-api-key

# === OpenAI STT/LLM 模型設定 ===
STT_MODEL=whisper-1  # gpt-4o-transcribe
LLM_MODEL=gpt-4o # gpt-4o-mini
STT_PROMPT="這是一段關於國泰人壽客服的對話，請使用臺灣慣用的繁體中文字詞進行轉錄。"

# === Yating TTS 語音設定 ===
YATING_TTS_ENDPOINT=https://tts.api.yating.tw/v2/speeches/short
YATING_TTS_MODEL_CUSTOMER=zh_en_female_1
YATING_TTS_MODEL_AGENT=zh_en_male_1
YATING_TTS_SPEED=1.0        
YATING_TTS_PITCH=1.0        
YATING_TTS_ENERGY=1.0       
YATING_TTS_ENCODING=MP3     
YATING_TTS_SAMPLE_RATE=16K 

# === 系統設定 ===
DEBUG=false
MAX_AUDIO_DURATION=300
STORAGE_PATH=./storage
